{
  "description": "Python development hooks for type checking, linting, formatting, and testing",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/python-hooks.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
